{
  "name": "altaqwaa",
  "version": "1.0.4",
  "homepage": "https://www.altaqwaa.org",
  "description": "Altaqwaa - Islamic Desktop Application",
  "main": "main.js",
  "type": "commonjs",
  "author": {
    "name": "Ryan Almalki",
    "email": "rn0xx711@gmail.com",
    "url": "https://www.altaqwaa.org"
  },
  "license": "MIT",
  "scripts": {
    "packwin": "electron-builder --windows",
    "packlinux": "electron-builder --linux",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dev": "nodemon --exec electron ."
  },
  "devDependencies": {
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13"
  },
  "dependencies": {
    "nodemon": "^2.0.15",
    "adhan": "^4.3.1",
    "fs-extra": "^10.0.1",
    "moment-timezone": "^0.5.34"
  },
  "build": {
    "productName":"Altaqwaa",
    "publish": {
			"provider": "github",
			"owner": "rn0x",
			"repo": "Altaqwaa-Islamic-Desktop-Application",
			"protocol": "https"
		},
    "appId": "org.altaqwaa.rn0x",
    "copyright": "Copyright © 2022 Altaqwaa",
    "extraFiles": [
      {
        "from":"json",
        "to": "resources/json",
        "filter": ["**/*"]
      },
      {
        "from":"mp3",
        "to": "resources/mp3",
        "filter": ["**/*"]
      },
      {
        "from":"build",
        "to": "resources/build",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "signingHashAlgorithms": [
        "sha256",
        "sha1"
    ],
    "signAndEditExecutable": true,
    "publisherName": "Ryan Almalki",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable"
        },
        {
          "target":"msi"
        }
      ]
    },
    "nsis": {
      "oneClick": "false",
      "perMachine": true,
      "allowToChangeInstallationDirectory": "true",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "build/LICENSE.txt",
      "shortcutName": "التقوى",
      "uninstallDisplayName":"التقوى",
      "installerSidebar":"build/installerSidebar.bmp",
      "uninstallerSidebar":"build/installerSidebar.bmp",
      "installerHeader":"build/installerHeader.bmp"
  },
    "linux": {
      "category":"Education",
      "icon": "build/icons/icon.icns",
      "vendor": "Ryan Almalki",
      "executableName": "Altaqwaa",
      "description": "Altaqwaa - Islamic Desktop Application",
      "synopsis": "Islamic Desktop Application",
      "target": [
        "AppImage",
        "deb",
        "rpm"
        
      ]
    },
    "directories": {
      "buildResources": "build"
    }
  }
}